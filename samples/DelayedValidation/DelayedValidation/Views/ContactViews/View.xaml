<UserControl x:Class="DelayedValidation.Views.ContactViews.View"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition />
			<ColumnDefinition />
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition />
			<RowDefinition />
		</Grid.RowDefinitions>
		<TextBlock Name="FirstName"
		           Grid.Row="0"
		           Grid.Column="0" />
		<TextBlock Name="LastName"
		           Grid.Row="0"
		           Grid.Column="1" />
		<TextBlock Name="PhoneNumber"
		           Grid.Row="1"
		           Grid.Column="0" />
		<Button Name="Edit"
		        Content="Edit"
		        Grid.Row="1"
		        Grid.Column="1"
		        HorizontalAlignment="Right"
		        VerticalAlignment="Bottom" />
	</Grid>
</UserControl>